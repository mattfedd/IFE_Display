<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matthew.ife_display.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="90 "
        android:id="@+id/speed"
        android:textSize="80pt"
        android:gravity="right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="123dp"
        android:layout_marginLeft="175dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="MPH"
        android:id="@+id/mph"
        android:textSize="20pt"
        app:layout_constraintLeft_toLeftOf="@+id/speed"
        app:layout_constraintHorizontal_bias="0.818"
        app:layout_constraintTop_toTopOf="@+id/speed"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="200dp" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="10%"
        android:id="@+id/soc"
        android:textSize="30pt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="0"
        android:id="@+id/status"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="0"
        android:id="@+id/dataOut"
        app:layout_constraintLeft_toLeftOf="@+id/status"
        app:layout_constraintTop_toTopOf="@+id/status"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="0"
        android:id="@+id/dataIn"
        app:layout_constraintLeft_toLeftOf="@+id/dataOut"
        app:layout_constraintTop_toTopOf="@+id/dataOut"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>
